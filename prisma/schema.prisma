generator client {
  provider = "prisma-client"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  VERIFIED_USER
  BANK_SAMPAH_ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

enum BankSampahStatus {
  PENDING
  APPROVED
  REJECTED
}

enum OlahanStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(USER)
  status        UserStatus @default(PENDING)
  campusId      String?
  industryId    String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  bankSampah    BankSampah?
  olahanSubmissions OlahanSubmission[]
  points        Point[]
  pointRedemptions PointRedemption[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model BankSampah {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String
  phone       String?
  image       String?
  status      BankSampahStatus @default(PENDING)
  
  adminId     String   @unique
  admin       User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  edukasi     Edukasi[]
  olahanSubmissions OlahanSubmission[]
  rewards     Reward[]

  @@map("bank_sampah")
}

model Edukasi {
  id          String   @id @default(cuid())
  title       String
  description String
  content     String   @db.Text
  image       String?
  category    String   // eco-enzyme, kompos, dll
  
  bankSampahId String
  bankSampah   BankSampah @relation(fields: [bankSampahId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("edukasi")
}

model OlahanSubmission {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?
  weight      Float    // berat dalam kg
  status      OlahanStatus @default(PENDING)
  pointsEarned Int?    // points yang didapat setelah diterima
  rejectionReason String? // alasan penolakan jika ditolak
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  bankSampahId String
  bankSampah   BankSampah @relation(fields: [bankSampahId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("olahan_submissions")
}

model Point {
  id          String   @id @default(cuid())
  amount      Int
  description String
  type        String   // EARNED, REDEEMED
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())

  @@map("points")
}

model Reward {
  id          String   @id @default(cuid())
  name        String
  description String
  image       String?
  pointCost   Int
  stock       Int      @default(0)
  
  bankSampahId String
  bankSampah   BankSampah @relation(fields: [bankSampahId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  redemptions PointRedemption[]

  @@map("rewards")
}

model PointRedemption {
  id          String   @id @default(cuid())
  pointsUsed  Int
  status      String   @default("PENDING") // PENDING, COMPLETED, CANCELLED
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  rewardId    String
  reward      Reward   @relation(fields: [rewardId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("point_redemptions")
}
